{
  "name": "ei",
  "version": "1.0.0",
  "description": "EI - Empathic Interface",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "typecheck": "tsc --noEmit",
    "web": "cd web;npm run dev",
    "tui": "cd tui;npm run dev"
  },
  "keywords": [
    "ai",
    "llm",
    "personas"
  ],
  "author": "Flare576",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^2.1.9",
    "express": "^5.2.1",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
